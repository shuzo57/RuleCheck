# Gemini API キー（LLM を利用しない場合は空でも可）
GEMINI_API_KEY=""

# SQLAlchemy が使用する接続 URL
# ローカルから直接接続する場合の例
DB_URL="postgresql+psycopg://rulecheck:secret@localhost:5432/rulecheck"

# Docker Compose で Postgres コンテナ（postgres）を使う場合の例
# DB_URL="postgresql+psycopg://rulecheck:secret@postgres:5432/rulecheck"

# ストレージの保存先（既定値を上書きしたい場合のみ設定）
# STORAGE_DIR="./app/storage"

# 任意: Postgres コンテナを `docker run` で立ち上げる際の環境変数例
# POSTGRES_DB="rulecheck"
# POSTGRES_USER="rulecheck"
# POSTGRES_PASSWORD="secret"
